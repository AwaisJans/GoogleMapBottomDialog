<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnMap"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:minHeight="70dp"
        android:gravity="start|center"
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="Google Map Bottom Sheet Behaviour"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnItemsScreen"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="start|center"
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:minHeight="70dp"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="Google Map Bottom Dialog Sheet"/>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCustomInfoWindowBtn"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="start|center"
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:minHeight="70dp"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="Google Map Info Window Task"/>






    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnWebViewScreen"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:minHeight="70dp"
        android:textAllCaps="false"
        android:gravity="start|center"
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:textSize="22sp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="Web View Task"/>








</LinearLayout>